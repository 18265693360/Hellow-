.container {
  margin-left: 2%;
  width: 96%;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 15rpx;
}

.eInvoice {
  width: 100%;
  background: #fff;
  margin-top: 10rpx;
  border-radius: 15rpx;
  border: 1rpx solid #d1d4e8;
  box-shadow: 4rpx 4rpx 4rpx 4rpx #e7e9ec;
  padding: 0 0 20rpx;
}

.item-title {
  height: 60rpx;
  padding-bottom: 5rpx;
  margin: 10rpx 25rpx 0rpx 25rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #e0e0e0;
}

.title-date {
  font-size: 26rpx;
  color: #666666;
  font-family: "Helvetica Neue",
                 Helvetica,
                 'microsoft yahei ui',
                 'microsoft yahei',
                 'simhei',
                 Arial,
                 sans-serif;
}

.title-type {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.type-img {
  width: 40rpx;
  height: 40rpx;
}

.type-text {
  font-size: 26rpx;
  margin-left: 15rpx;
}

.item-content {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  line-height: 45rpx;
  width: 100%;
}

.unitName {
  margin: 10rpx 30rpx;
  font: 26rpx "Helvetica Neue", Arial, sans-serif;
  color: #666666;
}

.btn-check {
  display: table;
  margin: 20rpx;
  padding: 0;
  margin-right: -15rpx;
  width: 140rpx;
  line-height: 50rpx; 
  border: 1rpx solid #4e60df;
  font: bold Arial, sans-serif;
  font-size: 30rpx;
  color: #4e60df;
  background: #fff;
  border-radius: 50rpx;
}

.btn-check text {
  vertical-align: middle;
  display: table-cell;
}

.content-right {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-right: 35rpx;
}

.content-left {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
   margin-left:  10rpx;
}

.amount {
