page {
  background: #5d70cc;
}

.container {
  width: 96%;
  margin-top: 15rpx;
  margin-left: 2%;
  background: #fff;
  display: flex;
  flex-direction: column;
  border-radius: 8rpx;
}

.QRcode {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 1;
}

.QRcode-title {
  font-size: 28rpx;
  color: #485adc;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}

.QRcode-body {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #e8e8e8;
}

.canvas {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.content {
  margin-top: 30rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.item {
  width: 94%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.item-title {
  font-size: 30rpx;
  color: #828282;
  margin-left: 30rpx;
}

.item-text {
  width: 70%;
  text-align:right;
  font-size: 30rpx;
  font-weight: 600;
}
.options{
  width: 82%;
   margin-left: 9%; 
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 10rpx;
  margin-bottom: 40rpx;
}
.btn-del{
  padding: 0;
  margin: 0;
  width: 220rpx;
  height: 70rpx;
  border: 1rpx solid #e8e8e8;
  line-height: 70rpx;
  border-radius: 28rpx;
  font-size: 28rpx;
  background: #fff;
}
.btn-edit{
  padding: 0;
  margin: 0;
  width: 220rpx;
  height: 70rpx;
  border: 1rpx solid #485adc;
  line-height: 70rpx;
  border-radius: 28rpx;
  font-size: 28rpx;
  color: #485adc;
  background: #fff;
}
.foot{
  width: 100%;
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.to-home{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
}
.icon-home{
  width: 40rpx;
  height: 34rpx;
}
.foot-text{
  margin-left: 10rpx;
  font-size: 34rpx;
  color: #fff;
}