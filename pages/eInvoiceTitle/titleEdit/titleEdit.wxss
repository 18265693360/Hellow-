.container {
  width: 100%;
  background: #fff;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
}

.radio-group {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
  border-bottom: 1rpx solid #e8e8e8;
  width: 96%;
  margin-left: 4%;
  padding-bottom: 20rpx;
}

.check-title {
  font-size: 28rpx;
  font-weight: 600;
}

.check-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
}

.radio {
  transform: scale(0.7);
}

.check-text {
  font-size: 28rpx;
}

.item {
  width: 96%;
  margin-left: 4%;
  border-bottom: 1rpx solid #e8e8e8;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
  padding-bottom: 20rpx;
}

.item_noBorder {
  width: 96%;
  margin-left: 4%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
  padding-bottom: 20rpx;
}

.title {
  font-size: 28rpx;
  width: 20%;
  font-weight: 600;
}

.content-input {
  width: 80%;
  height: 100%;
  padding-left: 30rpx;
  font-size: 28rpx;
}

.btn-save {
  width: 86%;
  margin-left: 7%;
  margin-top: 40rpx;
  height: 80rpx;
  background: linear-gradient(to right, #8896ff, #485adc);
  color: #fff;
  line-height: 80rpx;
  font-size: 28rpx;
}
