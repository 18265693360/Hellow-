.container{
  width: 96%;
  margin-left: 2%;
  margin-top: 140rpx;
  margin-bottom: 20rpx;
}
.title{
  width: 100%;
  height: 90rpx;
  margin-top: 20rpx;
  background: #fff;
}
.find-left{
  width: 500rpx;
  height: 50rpx;
  padding: 10rpx;
  margin: 25rpx 20rpx; 
  border-radius:  60rpx;
  background: #eaedf2;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.add-related-user{
  width: 100%;
  background: #fff;
  position: fixed;
  top: 0;
  z-index: 1000;
  border-top: 1rpx solid #e5e5e5;
  border-bottom: 1rpx solid #e5e5e5;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.img-icon {
  margin-left: 5%;
  height: 40rpx;
  width: 40rpx;
}
.user-input{
  border-radius: 10rpx;
  width: 70%;
  height: 100%;
  padding-left: 20rpx;
  font-size: 34rpx;
}
.btn-add-related-user{
  width: 160rpx;
  height: 60rpx;
  margin-right: 30rpx;
  display: table;
  color: #fff;
  background: linear-gradient(to right, #8896ff, #485adc);
  text-align: center;
  line-height: 60rpx; 
  font-size: 34rpx;
}
.abnor-hide{
  display: none;
}
.abnor-show{  }
.input-show{}
.input-hide{
  display: none
}

.input {
  border: 1px solid #cccccc;
  margin-bottom: 20px;
  width: 80%;
  padding: 5px;
}
.related-user{
  margin-top: 10rpx;
  width: 100%;
  height: 150rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  border-radius: 15rpx;
  border: 1rpx solid #d1d4e8;
  box-shadow: 4rpx 4rpx 4rpx 4rpx #e7e9ec;
}
.item-head{
  width: 94%;
  margin-left: 3%;
  height: 50%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #e9ecf3;
}
.user-name{
  font-size: 30rpx;
}
.eInvoice-type{
  font-size: 28rpx;
  color: #aeaeae;
}
.item-foot{
  width: 94%;
  margin-left: 3%;
  height: 50%;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;

}
.icon-default{
  width:  80rpx;
  height: 40rpx;
}
.icon-delete{
  width:55rpx;
  height: 55rpx;
}
.btn-del-related-user{
  width: 130rpx;
  height: 60rpx;
  margin-right: 5%;
  display: table;
  color: #fff;
  background: red;
  text-align: center;
  line-height: 60rpx; 
}
