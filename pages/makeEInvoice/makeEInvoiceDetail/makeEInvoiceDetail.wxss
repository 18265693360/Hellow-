.abnor-hide {
  display: none;
}

.abnor-show {
}
.container {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.active {
  color: #4e60df;
}

.card {
  width: 96%;
  background: #fff;
  margin-left: 2%;
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 10rpx;
}

.card-left {
  width: 60%;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}

.card-date {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.card-date text {
  margin-left: 15rpx;
  font-size: 28rpx;
  color: #666666;
}

.card-partyName {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 15rpx;
}

.dot-green {
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  background: #3bbd9e;
  margin-left: 25rpx;
}

.partyName-text {
  font-size: 28rpx;
  margin-left: 20rpx;
  color: #666666;
}

.card-costType {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 15rpx;
  margin-bottom: 20rpx;
}

.dot-orange {
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  background: #fa9655;
  margin-left: 25rpx;
}

.costType-text {
  font-size: 28rpx;
  margin-left: 20rpx;
  color: #666666;
}

.icon-time {
  width: 25rpx;
  height: 25rpx;
  margin-left: 20rpx;
}

.card-right {
  width: 40%;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
}

.check-box {
  transform: scale(0.8);
  margin-left: 180rpx;
}

.card-amount {
  display: flex;
  flex-direction: row-reverse;
  margin-right: 20rpx;
  margin-top: 20rpx;
}
.amount{
  font-size: 42rpx;
  font-weight: 600;
  color: #333333;
}
.unit{
  font-size: 24rpx;
  margin-top: 18rpx;
  margin-left: 5rpx;
  color: #666666;
}
.block{
  width: 100%;
  height: 210rpx;
}
.foot{
  width: 100%;
  position: fixed;
  bottom: 0;
  z-index: 2;
  display: flex;
  flex-direction: column;
}
.foot-count{
  width: 100%;
  height: 50rpx;
  background: #f9f9f9;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-top: 1rpx solid #d1d4e8;
  border-bottom: 1rpx solid #d1d4e8;
  padding-left:30rpx;
  font-size: 28rpx; 
}
.foot-text{
  color: #fa9655;
}
.foot-options{
  width: 100%;
  height: 150rpx;
  background: #f9f9f9;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.check-all{
  margin-left: -160rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 30rpx;
}
.btn-next{
  width: 200rpx;
  height: 90rpx;
  margin-left: 380rpx;
  background: #4a4d5b;
  color: #fff;
  border-radius: 5rpx;
  text-align: center;
  line-height: 90rpx;
}
.blue{
  color: #4b5ddd;
  font-size: 26rpx;
}
.font-22{
  font-size: 22rpx;
  color: #666666;
  background-color: #f9f9f9;
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: 1px solid #d3d4d4;
  padding-right: 40rpx;
  margin-bottom: 20rpx;
  text-align:right;

}